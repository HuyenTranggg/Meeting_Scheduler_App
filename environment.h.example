#ifndef ENVIRONMENT_H
#define ENVIRONMENT_H

#include <string>
using namespace std;

class Environment {
  private:
    string host = "tcp://127.0.0.1:3306";
    string user = "";
    string password = "";
    string database = "ltm";

  public:
    string getHost() const {
        return host;
    }

    string getUser() const {
        return user;
    }

    string getPassword() const {
        return password;
    }

    string getDatabase() const {
        return database;
    }
};

#endif // ENVIRONMENT_H

